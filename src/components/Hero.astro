---
interface Props {
  projectCount: number;
}

const { projectCount } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-4xl font-bold mb-4">Showcase of Projects Made in Bulgaria</h2>
    <p class="text-gray-600 max-w-2xl mx-auto mb-8">
      Discover amazing open-source projects built by Bulgarian entrepreneurs and developers
      that are making an impact globally. Currently featuring <strong>{projectCount}</strong> projects.
    </p>

    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <div class="bg-white shadow-md rounded-lg px-6 py-4 flex items-center space-x-4">
        <div class="text-bulgaria">
          <svg class="icon-lg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="16 18 22 12 16 6"></polyline>
            <polyline points="8 6 2 12 8 18"></polyline>
          </svg>
        </div>
        <div class="text-left">
          <h3 class="font-bold">Open Source</h3>
          <p class="text-sm text-gray-600">Publicly available code</p>
        </div>
      </div>
      <div class="bg-white shadow-md rounded-lg px-6 py-4 flex items-center space-x-4">
        <div class="bulgaria-red">
          <svg class="icon-lg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
        </div>
        <div class="text-left">
          <h3 class="font-bold">Companies</h3>
          <p class="text-sm text-gray-600">Tech businesses</p>
        </div>
      </div>
      <div class="bg-white shadow-md rounded-lg px-6 py-4 flex items-center space-x-4">
        <div class="text-bulgaria">
          <svg class="icon-lg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
        </div>
        <div class="text-left">
          <h3 class="font-bold">Developer Tools</h3>
          <p class="text-sm text-gray-600">Products for developers</p>
        </div>
      </div>
    </div>

    <div class="relative max-w-xl mx-auto">
      <input
        id="search-input"
        type="text"
        placeholder="Search projects..."
        class="w-full py-3 px-4 pr-10 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-bulgaria focus:border-transparent focus-ring"
      />
      <div class="absolute right-3 top-3 text-gray-400">
        <svg class="icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </div>
    </div>
  </div>
</section>
