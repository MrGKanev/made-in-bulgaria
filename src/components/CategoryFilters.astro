---
const categories = [
  { id: 'all', label: 'All' },
  { id: 'open-source', label: 'Open Source' },
  { id: 'company', label: 'Company' },
  { id: 'dev-tool', label: 'Developer Tool' },
  { id: 'saas', label: 'SaaS' },
  { id: 'app', label: 'Applications' }
];
---

<section class="py-6 bg-gray-50" aria-label="Filter projects by category">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-center gap-4" id="filter-container" role="group" aria-label="Category filters">
      {categories.map((cat, index) => (
        <button
          class:list={[
            'filter-btn px-4 py-2 rounded-md shadow-sm cursor-pointer',
            index === 0 ? 'active bg-bulgaria text-white' : 'bg-white text-gray-700'
          ]}
          data-filter={cat.id}
          type="button"
          aria-pressed={index === 0 ? 'true' : 'false'}
        >
          {cat.label}
        </button>
      ))}
      <button
        class="filter-btn bg-white text-gray-700 px-4 py-2 rounded-md shadow-sm cursor-pointer"
        id="toggle-letter-nav"
        type="button"
        aria-expanded="false"
        aria-controls="letter-navigation"
      >
        <span class="flex items-center">
          <svg class="icon-sm mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <polyline points="4 7 4 4 20 4 20 7"></polyline>
            <line x1="9" y1="20" x2="15" y2="20"></line>
            <line x1="12" y1="4" x2="12" y2="20"></line>
          </svg>
          A-Z
        </span>
      </button>
    </div>
  </div>
</section>

<!-- Letter Navigation (hidden by default) -->
<nav id="letter-navigation" class="container mx-auto px-4 py-6 flex-wrap justify-center gap-2 hidden" aria-label="Alphabetical navigation">
  {Array.from('ABCDEFGHIJKLMNOPQRSTUVWXYZ').map(letter => (
    <a
      href={`#section-${letter}`}
      class="letter-link filter-btn bg-white text-gray-700 px-3 py-2 rounded-md shadow-sm text-sm"
      data-letter={letter}
    >
      {letter}
    </a>
  ))}
</nav>
